@{
    ViewBag.Title = "合作列表";

    
}

@section Css{
    <link rel="stylesheet" type="text/css" href="~/Content/css/libs/huanhuan.css" />
}

<div class="bibox clearfix">
    <div class="cinpin clearfix">
        <div class="conens clearfix">
            <div class="tops clearfix"><a><img src="~/Content/img/hhsbane.jpg" class="img-style" /></a></div>

            <div class="linkbc clearfix">
                <div class="bic clearfix"><a href=@Url.Action("Index","Start",new {Area = ""})><span>首页</span></a><span>合作区</span><span style="background:none;">目录浏览</span></div>
