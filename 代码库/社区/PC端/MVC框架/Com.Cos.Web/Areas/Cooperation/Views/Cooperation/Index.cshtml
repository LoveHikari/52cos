                }
            </div>
        </div>
        <!--分页-->
        @Url.GetToPager((int)ViewBag.PageIndex, (int)ViewBag.PageSize, (int)ViewBag.TotalRecord, "Cooperation_new", new { controller = "Cooperation", action = "CooList" })
